{
  "name": "ngx-clipboard",
  "description": "angular 2 clipboard",
  "main": "index.js",
  "version": "3.0.5",
  "author": {
    "name": "Sam Lin",
    "email": "maxisam@gmail.com"
  },
  "homepage": "https://github.com/maxisam/ngx-clipboard",
  "scripts": {
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "commit": "git-cz",
    "clean:dist": "rimraf dist compiled",
    "publish-npm": "npm publish",
    "build": "npm run clean:dist && npm run build-aot && npm-run-all --parallel build:*",
    "build-aot": "ngc -p ./tsconfig-aot.json",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "dev:build": "webpack --output-filename index.umd.js --progress --profile --bail",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "engines": {
    "node": ">= 4.2.1"
  },
  "license": "MIT",
  "publishConfig": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/maxisam/ngx-clipboard"
  },
  "keywords": [
    "angular",
    "clipboard",
    "copy"
  ],
  "dependencies": {
    "@angular/core": "^2.4.1",
    "clipboard": "~1.5.16",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.1",
    "zone.js": "~0.7.2"
  },
  "devDependencies": {
    "@angular/compiler-cli": "2.4.1",
    "@angular/platform-server": "2.4.1",
    "@angular/compiler": "2.4.1",
    "@ngtools/webpack": "1.2.1",
    "@types/clipboard": "1.5.31",
    "@types/node": "6.0.48",
    "commitizen": "2.9.2",
    "cz-conventional-changelog": "^1.2.0",
    "es6-promise": "4.0.5",
    "es6-promise-loader": "^1.0.2",
    "es6-shim": "^0.35.2",
    "es7-reflect-metadata": "^1.6.0",
    "npm-run-all": "^3.1.2",
    "semantic-release": "6.3.2",
    "awesome-typescript-loader": "3.0.0-beta.17",
    "ts-loader": "1.3.3",
    "ts-node": "1.7.2",
    "typescript": "2.0.10",
    "webpack": "2.1.0-beta.28",
    "webpack-merge": "2.0.0",
    "rimraf": "2.5.4"
  },
  "files": [
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig*.json",
    "index.*",
    "src",
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}